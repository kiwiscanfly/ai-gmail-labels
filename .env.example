# Email Agent Environment Configuration
# Copy this file to .env and customize as needed
# All values shown are defaults - press Enter during install to accept

# ============================================
# Ollama Configuration
# ============================================
OLLAMA__HOST=http://localhost:11434
OLLAMA__MODELS__PRIMARY=gemma3:4b
OLLAMA__MODELS__FALLBACK=llama3.2:3b
OLLAMA__MODELS__REASONING=llama3.2:3b
OLLAMA__TIMEOUT=60
OLLAMA__MAX_RETRIES=3
OLLAMA__KEEP_ALIVE=true

# ============================================
# LLM Generation Parameters
# ============================================
LLM__TEMPERATURE=0.1
LLM__TOP_P=0.95
LLM__NUM_PREDICT=100
LLM__MAX_TOKENS=150

# ============================================
# Gmail Configuration
# ============================================
GMAIL__CREDENTIALS_PATH=./credentials.json
GMAIL__TOKEN_PATH=./token.json
GMAIL__BATCH_SIZE=50
GMAIL__RATE_LIMIT__REQUESTS_PER_SECOND=10
GMAIL__RATE_LIMIT__QUOTA_PER_USER_PER_SECOND=250

# ============================================
# Email Processing Settings
# ============================================
EMAIL__DEFAULT_LIMIT=50
EMAIL__MAX_RESULTS=1000
EMAIL__CACHE_TTL=3600
EMAIL__CACHE_MAX_SIZE=1000

# ============================================
# Classification Confidence Thresholds
# ============================================
CATEGORIZATION__CONFIDENCE_THRESHOLD=0.75
CLASSIFICATION__PRIORITY__HIGH_CONFIDENCE=0.8
CLASSIFICATION__PRIORITY__MEDIUM_CONFIDENCE=0.6
CLASSIFICATION__MARKETING__THRESHOLD=0.7
CLASSIFICATION__RECEIPT__THRESHOLD=0.7
CLASSIFICATION__NOTIFICATIONS__THRESHOLD=0.7
CLASSIFICATION__CUSTOM__THRESHOLD=0.7

# ============================================
# SQLite Database Configuration
# ============================================
SQLITE__DATABASE_PATH=./data/agent_state.db
SQLITE__CONNECTION_POOL_SIZE=5
SQLITE__POOL_TIMEOUT=10.0
SQLITE__MAX_OVERFLOW=10
SQLITE__BUSY_TIMEOUT=30000
SQLITE__JOURNAL_MODE=WAL

# ============================================
# State Management
# ============================================
STATE__CHECKPOINT_INTERVAL=60
STATE__CLEANUP_INTERVAL=86400
STATE__MAX_HISTORY_DAYS=30

# ============================================
# Application Settings
# ============================================
APP__MODE=interactive
APP__NAME=Email Categorization Agent
APP__VERSION=1.0.0
APP__DEBUG=false

# ============================================
# Logging Configuration
# ============================================
LOGGING__LEVEL=INFO
LOGGING__FORMAT=json
LOGGING__OUTPUT=./logs/agent.log
LOGGING__MAX_FILE_SIZE=10MB
LOGGING__BACKUP_COUNT=5
LOGGING__STRUCTURED=true

# ============================================
# MCP Server Settings
# ============================================
MCP__HOST=localhost
MCP__PORT=8080
MCP__AUTH_TOKEN=your-auth-token-here
MCP__CORS_ORIGINS=["*"]

# ============================================
# Security Settings
# ============================================
SECURITY__ENCRYPT_STATE=false
SECURITY__CREDENTIAL_STORAGE=file
SECURITY__MAX_LOGIN_ATTEMPTS=3
SECURITY__SESSION_TIMEOUT=3600

# ============================================
# Performance Settings
# ============================================
PERFORMANCE__ENABLE_MONITORING=true
PERFORMANCE__METRICS_RETENTION_DAYS=7
PERFORMANCE__HEALTH_CHECK_INTERVAL=30

# ============================================
# Email Storage Settings
# ============================================
STORAGE__CACHE_EXPIRY=3600
STORAGE__MAX_EMAIL_SIZE=10485760
STORAGE__COMPRESSION_ENABLED=true